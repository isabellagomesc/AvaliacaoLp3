@model List<AvaliacaoLP3.Models.LojaViewModel>

@{
    ViewData["Title"] = "Gerenciamento";
}
    
<h1>Gerenciamento</h1>
    
@if(Model.Count == 0)
{
    <p>Nenhuma loja cadastrada</p>
}
else
{
    <hr>
    @foreach(var loja in Model)
    {
    <h1>@loja.Nome</h1>
    <a href="Detalhes/@loja.Id">Detalhar</a>
    <a href="Excluir/@loja.Id">Excluir</a>
    <hr>
    }
}